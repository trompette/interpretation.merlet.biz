{% block content %}
    <h3>Отримати безкоштовний розрахунок вартості замовлення</h3>

    <form class="form-horizontal">
        <div class="control-group">
            <label class="control-label">Ім'я</label><!-- prénom -->
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Прізвище</label><!-- nom -->
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Назва компанії</label>
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Телефон</label>
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Адреса е-mail</label>
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Необхідна послуга</label>
            <div class="controls">
                <select class="span6">
                    <option>синхронний переклад</option>
                    <option>шушотаж</option>
                    <option>послідовний переклад</option>
                    <option>пофразовий переклад</option>
                    <option>супровідний переклад</option>
                    <option>письмовий технічний переклад</option>
                    <option>інше</option>
                </select>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Тематика перекладу</label>
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Мови перекладу</label>
            <div class="controls">
                <label class="checkbox inline"><input type="checkbox" />французька</label>
                <label class="checkbox inline"><input type="checkbox" />англійська</label>
                <label class="checkbox inline"><input type="checkbox" />російська</label>
                <label class="checkbox inline"><input type="checkbox" />українська</label>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Деталі замовлення</label>
            <div class="controls">
                <textarea class="span10" rows="10"></textarea>
            </div>
        </div>
        <div class="form-action">
            <input class="btn btn-large btn-primary" type="submit" value="Відправити замовлення" />
        </div>
    </form>

