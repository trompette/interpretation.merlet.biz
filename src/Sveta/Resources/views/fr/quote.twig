{% block content %}
    <h3>Demande de devis gratuit</h3>

    <form class="form-horizontal">
        <div class="control-group">
            <label class="control-label">Civilité</label>
            <div class="controls">
                <label class="radio inline"><input type="radio" />Monsieur</label>
                <label class="radio inline"><input type="radio" />Madame</label>
                <label class="radio inline"><input type="radio" />Mademoiselle</label>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Nom</label>
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Prénom</label>
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Société</label>
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Téléphone</label>
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Adresse électronique</label>
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Nature du service</label>
            <div class="controls">
                <select class="span6">
                    <option>Interprétation simultanée</option>
                    <option>Chuchotage</option>
                    <option>Interprétation consécutive</option>
                    <option>Interprétation de liaison</option>
                    <option>Interprétation d'accompagnement</option>
                    <option>Traduction technique</option>
                    <option>Autre</option>
                </select>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Domaine</label>
            <div class="controls"><input class="span6" type="text" /></div>
        </div>
        <div class="control-group">
            <label class="control-label">Langues à utiliser</label>
            <div class="controls">
                <label class="checkbox inline"><input type="checkbox" />Français</label>
                <label class="checkbox inline"><input type="checkbox" />Anglais</label>
                <label class="checkbox inline"><input type="checkbox" />Russe</label>
                <label class="checkbox inline"><input type="checkbox" />Ukrainien</label>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Détails de votre demande</label>
            <div class="controls">
                <textarea class="span10" rows="10"></textarea>
            </div>
        </div>
        <div class="form-action">
            <input class="btn btn-large btn-primary" type="submit" value="Demander un devis" />
        </div>
    </form>

